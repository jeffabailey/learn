include _mixins
#edit-card.edit-card
  form(hx-put="/cards/" + list.id + "/" + card.id , hx-target="#edit-card", hx-swap="outerHTML")
    .card
      textarea.edit-card-textarea(name="label", style='height: 34px;', maxlength="300", autofocus="true")
        | #{card.label}
      input(type="hidden", name="listId", value=id)
    .edit-buttons
      button.edit-button(
        type="submit", 
        tabindex='0' 
        style='background-color: rgb(90, 172, 68);'
        _="on htmx:afterOnLoad remove #edit-card"
        ) Save
      button.edit-button(
        type="button", 
        tabindex='0' 
        style='background-color: rgb(234, 37, 37);'
        hx-delete="/cards/" + list.id +  "/" + card.id
        _="on htmx:afterOnLoad remove #edit-card"
        ) Delete
      .edit-button-cancel(tabindex='0', hx-get="/cards/cancel-edit/" + list.id + "/" + card.id, hx-target='#edit-card', hx-swap="outerHTML")
        +icon-close()

